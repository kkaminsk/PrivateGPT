{
  "name": "privategpt",
  "version": "0.8.0",
  "description": "Privacy-focused chat application with ephemeral data storage and local AI models",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "test": "node --test test/*.test.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:msix": "electron-builder --win appx",
    "build:win:msix:signed": "npm run build:win:msix && pwsh -File scripts/Sign-MSIX.ps1",
    "build:win:nsis": "electron-builder --win nsis",
    "build:mac": "electron-builder --mac"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "foundry-local-sdk": "^0.3.0",
    "openai": "^4.98.0"
  },
  "build": {
    "extends": "./electron-builder.cjs"
  }
}
